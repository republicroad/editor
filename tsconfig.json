{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "noImplicitAny": false,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    /* module references  */
    "baseUrl": ".",
    "paths": {
      "@gorules/jdm-editor/*": ["jdm-editor/packages/jdm-editor/*"], 
    },
  },
  "include": [
    "src",
    // "jdm-editor/packages/jdm-editor/src/"
    // "node_modules/@gorules/jdm-editor"
  ],
  "references": [{ "path": "./tsconfig.node.json"}]
}
